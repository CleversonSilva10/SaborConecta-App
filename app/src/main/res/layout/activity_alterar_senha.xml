<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/yellow_backgground">

    <ImageView
        android:id="@+id/icon_backarrow"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_marginHorizontal="10dp"
        android:layout_marginVertical="15dp"
        android:layout_marginTop="10dp"
        android:rotation="-90"
        android:src="@drawable/seta_voltar"
        />

    <ImageView
        android:id="@+id/imgRedefinir"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_marginTop="25dp"
        android:src="@drawable/user1"
        app:layout_constraintTop_toBottomOf="@+id/icon_backarrow"
        />

    <TextView
        android:id="@+id/textViewTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Redefinição de Senha"
        android:textColor="@color/black"
        android:textAlignment="center"
        android:textStyle="bold"
        android:textSize="24sp"
        android:fontFamily="@font/roboto_bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@+id/imgRedefinir"
        app:layout_constraintBottom_toTopOf="@+id/textView1"/>

    <TextView
        android:id="@+id/textView1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="1. Digite Seu E-mail: Por favor, insira o seu e-mail associado à sua conta no aplicativo."
        app:layout_constraintTop_toBottomOf="@+id/textViewTitle"
        android:layout_marginTop="10dp"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="5dp"
        app:layout_constraintStart_toStartOf="parent"
        android:textColor="@color/black"
        android:background="@drawable/borda_editext"
        android:textSize="15sp"
        android:padding="10dp"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="2. Confira Seu E-mail: Após inserir o seu e-mail, verifique a sua caixa de entrada. Você receberá um e-mail com instruções sobre como redefinir a sua senha."
        app:layout_constraintTop_toBottomOf="@+id/textView1"
        android:layout_marginTop="4dp"
        android:textColor="@color/black"
        android:padding="10dp"
        android:background="@drawable/borda_editext"
        android:textSize="15sp"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="5dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/textView3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="3. Clique no Link: Redefina sua senha e mude sua senha"
        android:padding="10dp"
        android:background="@drawable/borda_editext"
        app:layout_constraintTop_toBottomOf="@+id/textView2"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="4dp"
        android:textColor="@color/black"
        android:textSize="14sp"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="5dp"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/textView6"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="4. Senha Redefinida com Sucesso: Agora você pode acessar sua conta normalmente. Volte à tela de login do aplicativo e insira suas novas credenciais para entrar."
        app:layout_constraintTop_toBottomOf="@+id/textView3"
        app:layout_constraintStart_toStartOf="parent"
        android:textSize="15sp"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="4dp"
        android:padding="10dp"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="5dp"
        android:background="@drawable/borda_editext"
        android:textColor="@color/black"
        />

    <EditText
        android:id="@+id/editEmail"
        android:layout_width="370dp"
        android:layout_height="wrap_content"
        android:hint="E-mail"
        android:textColorHint="@color/black"
        android:background="@drawable/borda_editext"
        android:maxLines="1"
        android:textColor="@color/black"
        android:inputType="textEmailAddress"
        android:padding="15dp"
        android:layout_marginTop="-50dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toTopOf="@id/buttonResetPassword"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView6"
        android:layout_marginStart="40dp"
        android:layout_marginEnd="40dp"/>

    <Button
        android:id="@+id/buttonResetPassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Enviar para e-mail"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:backgroundTint="@color/black"
        android:padding="15dp"
        app:cornerRadius="15dp"
        android:layout_marginTop="20dp"
        android:textStyle="bold"
        android:layout_marginStart="100dp"
        android:layout_marginEnd="100dp"
        app:layout_constraintTop_toBottomOf="@+id/editEmail"/>

</androidx.constraintlayout.widget.ConstraintLayout>
